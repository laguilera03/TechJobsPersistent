@model List<TechJobsPersistent.Models.Employer>

@if (Model.Count == 0)
{
    <h1>No jobs with the given Employer!</h1>
}
else
{
    <h1>Jobs with the Employer: @Model[0].Name</h1>
    <p>Employer Description: @Model[0].Location</p>

    <ul>
        @foreach (var employer in Model)
        {
            <li>@employer.Name</li>
        }
    </ul>

}